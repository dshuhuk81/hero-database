---
import Footer from "../components/Footer.astro";
import Sidebar from "../components/Sidebar.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Symbol Harmony - Motto Immortal</title>
</head>
<body>
  <Sidebar />

  <!-- HERO SECTION -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <h1 class="hero-headline">Symbol Harmony</h1>
  </section>

  <!-- MAIN CONTENT -->
  <main class="main-content">
    
  </main>

  <Footer />
</body>
</html>

<style>
/* RESET & BASE */
html, body {
  margin: 0;
  padding: 0;
  font-family: "Spectral", "Roboto", system-ui, sans-serif;
  background:
    radial-gradient(ellipse at 30% -10%, rgba(120,90,200,0.15), transparent 60%),
    radial-gradient(ellipse at 80% 20%, rgba(255,215,100,0.08), transparent 55%),
    linear-gradient(to bottom, #0d0b10, #07060c);
  color: #e6e6eb;
  min-height: 100vh;
}

body {
  margin-left: 80px;
}

@media (max-width: 768px) {
  body {
    margin-left: 0;
    margin-bottom: 60px;
  }
}

.hero {
  position: relative;
  width: 100%;
  height: 320px;
  background-image: url("/bg.jpg");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.hero-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60%;
  background: linear-gradient(
    to top,
    rgba(7, 6, 12, 0.95) 0%,
    rgba(7, 6, 12, 0.7) 40%,
    transparent 100%
  );
  pointer-events: none;
}

.hero-headline {
  position: relative;
  z-index: 1;
  padding: 0 32px 32px;
  margin: 0;
  font-size: 3rem;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 4px 12px rgba(0, 0, 0, 0.6);
}

@media (max-width: 768px) {
  .hero {
    height: 240px;
  }
  
  .hero-headline {
    font-size: 2rem;
    padding: 0 24px 24px;
  }
}

.main-content {
  max-width: 1000px;
  margin: 0 auto;
  padding: 48px 32px 80px;
}

.content-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(168, 85, 247, 0.3);
  border-radius: 12px;
  padding: 32px;
  margin-bottom: 32px;
  transition: border-color 0.3s ease;
}

.content-card:hover {
  border-color: rgba(168, 85, 247, 0.5);
}

.intro-card {
  background: rgba(250, 204, 21, 0.05);
  border: 1px solid rgba(250, 204, 21, 0.4);
}

.content-card h2 {
  margin-top: 0;
  margin-bottom: 16px;
  font-size: 2rem;
  color: #fcd34d;
  border-bottom: 2px solid rgba(250, 204, 21, 0.3);
  padding-bottom: 12px;
}

.content-card h3 {
  margin-top: 24px;
  margin-bottom: 12px;
  font-size: 1.5rem;
  color: #fcd34d;
}

.content-card h4 {
  margin-top: 16px;
  margin-bottom: 8px;
  font-size: 1.2rem;
  color: #e6e6eb;
}

.content-card p {
  line-height: 1.8;
  margin-bottom: 16px;
  color: #e6e6eb;
}

.content-card ul, .content-card ol {
  line-height: 1.8;
  margin-bottom: 16px;
  color: #e6e6eb;
}

.content-card li {
  margin-bottom: 12px;
}

.content-card strong {
  color: #e6e6eb;
}

.symbol-type {
  background: rgba(255, 255, 255, 0.02);
  border-left: 4px solid rgba(168, 85, 247, 0.6);
  padding: 20px;
  margin: 24px 0;
  border-radius: 6px;
  transition: all 0.3s ease;
}

.symbol-type:hover {
  background: rgba(168, 85, 247, 0.05);
  border-left-width: 6px;
}

.symbol-type h3 {
  margin-top: 0;
  color: #fcd34d;
  font-size: 1.4rem;
}

.recommendation {
  margin-top: 16px;
  font-style: italic;
  color: #e6e6eb;
  font-weight: 500;
}

.info-box {
  background: rgba(59, 130, 246, 0.1);
  border-left: 4px solid rgba(59, 130, 246, 0.6);
  padding: 20px;
  margin: 20px 0;
  border-radius: 6px;
}

.info-box h4 {
  margin-top: 0;
  color: #fcd34d;
}

.resonance-box {
  background: rgba(250, 204, 21, 0.08);
  border: 2px solid rgba(250, 204, 21, 0.4);
  padding: 20px;
  margin: 20px 0;
  border-radius: 8px;
}

.resonance-box h4 {
  margin-top: 0;
  color: #fcd34d;
  font-size: 1.3rem;
}

.strategy-section {
  background: rgba(74, 222, 128, 0.05);
  border-left: 4px solid rgba(74, 222, 128, 0.6);
  padding: 20px;
  margin: 20px 0;
  border-radius: 6px;
}

.strategy-section h4 {
  margin-top: 0;
  color: #fcd34d;
}

.warning-card {
  background: rgba(220, 38, 38, 0.1);
  border: 1px solid rgba(220, 38, 38, 0.4);
}

.warning-card h2 {
  color: #fcd34d;
  border-bottom-color: rgba(220, 38, 38, 0.4);
}

.tips-card {
  background: rgba(250, 204, 21, 0.05);
  border: 1px solid rgba(250, 204, 21, 0.4);
}

.info-text {
  font-size: 1.1rem;
  color: #fcd34d;
  font-weight: 600;
  text-align: center;
  padding: 16px;
  background: rgba(250, 204, 21, 0.1);
  border-radius: 6px;
  margin-top: 24px;
}

@media (max-width: 768px) {
  .content-card {
    padding: 24px 20px;
  }

  .content-card h2 {
    font-size: 1.5rem;
  }

  .content-card h3 {
    font-size: 1.25rem;
  }

  .symbol-type,
  .info-box,
  .resonance-box,
  .strategy-section {
    padding: 16px;
  }
}
</style>
