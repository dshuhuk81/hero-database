---
// src/pages/submit-ratings.astro
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
import { heroes } from "../data/heroes";

// Alphabetisch sortiert
const sortedHeroes = [...heroes].sort((a, b) =>
  a.name.localeCompare(b.name, "en", { sensitivity: "base" })
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Submit Ratings - Hero Database</title>
  </head>

  <body>
    <Sidebar />
    
    <div class="page-wrapper">
      <div class="submit-page">
        <header class="submit-header">
          <h1>Submit Hero Ratings</h1>
          <p class="subtitle">Help improve our tier list with your ratings!</p>
        </header>

        <main class="submit-content">
          <form id="ratingsForm" class="ratings-form">
            <!-- SUBMITTER INFO -->
            <section class="form-section">
              <h2>Your Information (Optional)</h2>
              <div class="form-row">
                <div class="form-group">
                  <label for="submitterName">Name/Discord</label>
                  <input 
                    type="text" 
                    id="submitterName" 
                    name="submitterName"
                    placeholder="e.g., YourName or Discord#1234"
                    class="form-input"
                  />
                </div>
              </div>
            </section>

            <!-- HERO SELECTION -->
            <section class="form-section">
              <h2>Select Hero</h2>
              <div class="form-group">
                <label for="heroSelect">Hero *</label>
                <select id="heroSelect" name="heroId" required class="form-select">
                  <option value="">-- Select a Hero --</option>
                  {sortedHeroes.map(hero => (
                    <option value={hero.id}>{hero.name}</option>
                  ))}
                </select>
              </div>
            </section>

            <!-- RATINGS -->
            <section class="form-section">
              <h2>Ratings</h2>
              <p class="form-hint">Rate each category (SSS, SS, S, A, B, C, or leave blank if unsure)</p>
              
              <div class="ratings-grid">
                <div class="form-group">
                  <label for="overallRating">Overall Rating</label>
                  <select id="overallRating" name="overall" class="form-select">
                    <option value="">-- Not Rated --</option>
                    <option value="SSS">SSS</option>
                    <option value="SS">SS</option>
                    <option value="S">S</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="grimSurgeRating">Grim Surge</label>
                  <select id="grimSurgeRating" name="grimSurge" class="form-select">
                    <option value="">-- Not Rated --</option>
                    <option value="SSS">SSS</option>
                    <option value="SS">SS</option>
                    <option value="S">S</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="delusionsDenRating">Delusions Den</label>
                  <select id="delusionsDenRating" name="delusionsDen" class="form-select">
                    <option value="">-- Not Rated --</option>
                    <option value="SSS">SSS</option>
                    <option value="SS">SS</option>
                    <option value="S">S</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="torrentRiftRating">Torrent Rift</label>
                  <select id="torrentRiftRating" name="torrentRift" class="form-select">
                    <option value="">-- Not Rated --</option>
                    <option value="SSS">SSS</option>
                    <option value="SS">SS</option>
                    <option value="S">S</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="pvpRating">PvP</label>
                  <select id="pvpRating" name="pvp" class="form-select">
                    <option value="">-- Not Rated --</option>
                    <option value="SSS">SSS</option>
                    <option value="SS">SS</option>
                    <option value="S">S</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                  </select>
                </div>
              </div>
            </section>

            <!-- COMMENTS -->
            <section class="form-section">
              <h2>Comments (Optional)</h2>
              <div class="form-group">
                <label for="comments">Additional Notes</label>
                <textarea 
                  id="comments" 
                  name="comments"
                  rows="4"
                  placeholder="Any thoughts on this hero's strengths/weaknesses?"
                  class="form-textarea"
                ></textarea>
              </div>
            </section>

            <!-- SUBMIT -->
            <div class="form-actions">
              <button type="submit" class="submit-button">Submit Rating</button>
              <button type="reset" class="reset-button">Clear Form</button>
            </div>

            <!-- SUCCESS MESSAGE -->
            <div id="successMessage" class="success-message" style="display: none;">
              ✅ Thank you! Your rating has been submitted.
            </div>

            <!-- ERROR MESSAGE -->
            <div id="errorMessage" class="error-message" style="display: none;">
              ❌ Something went wrong. Please try again or contact support.
            </div>
          </form>
        </main>

        <Footer />
      </div>
    </div>

    <style>
      html, body {
        margin: 0;
        padding: 0;
        min-height: 100%;
        background: radial-gradient(
            ellipse at 30% -10%, rgba(120, 90, 200, 0.15), transparent 60%
          ),
          radial-gradient(
            ellipse at 80% 20%, rgba(255, 215, 100, 0.08), transparent 55%
          ),
          linear-gradient(to bottom, #0d0b10, #07060c);
        color: #e6e6eb;
        font-family: Spectral, ui-sans-serif, system-ui, sans-serif;
      }

      .page-wrapper {
        margin-left: 96px;
        min-height: 100vh;
      }

      .submit-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* HEADER */
      .submit-header {
        max-width: 800px;
        margin: 0 auto;
        padding: 64px 24px 32px;
        text-align: center;
      }

      .submit-header h1 {
        font-size: 3rem;
        font-weight: 600;
        margin: 0 0 16px;
      }

      .subtitle {
        font-size: 1.125rem;
        color: rgba(230, 230, 235, 0.7);
        margin: 0;
      }

      /* CONTENT */
      .submit-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 24px;
        flex: 1;
        width: 100%;
      }

      /* FORM */
      .ratings-form {
        background: rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 12px;
        padding: 32px;
      }

      .form-section {
        margin-bottom: 40px;
      }

      .form-section h2 {
        font-size: 1.5rem;
        margin: 0 0 16px;
        color: #fff;
      }

      .form-hint {
        color: rgba(230, 230, 235, 0.6);
        font-size: 0.9rem;
        margin: 0 0 16px;
      }

      .form-row {
        display: flex;
        gap: 16px;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
        flex: 1;
      }

      label {
        font-weight: 500;
        font-size: 0.95rem;
        color: rgba(230, 230, 235, 0.9);
      }

      .form-input,
      .form-select,
      .form-textarea {
        padding: 12px 16px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color: #fff;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.2s ease;
      }

      .form-input:focus,
      .form-select:focus,
      .form-textarea:focus {
        outline: none;
        border-color: #facc15;
        background: rgba(255, 255, 255, 0.08);
      }

      .form-textarea {
        resize: vertical;
        min-height: 100px;
      }

      /* RATINGS GRID */
      .ratings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
      }

      /* FORM ACTIONS */
      .form-actions {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-top: 32px;
      }

      .submit-button,
      .reset-button {
        padding: 14px 32px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .submit-button {
        background: linear-gradient(135deg, #facc15, #f59e0b);
        color: #1a1a1a;
      }

      .submit-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(250, 204, 21, 0.3);
      }

      .reset-button {
        background: rgba(255, 255, 255, 0.08);
        color: #e6e6eb;
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .reset-button:hover {
        background: rgba(255, 255, 255, 0.12);
      }

      /* MESSAGES */
      .success-message,
      .error-message {
        margin-top: 24px;
        padding: 16px;
        border-radius: 8px;
        text-align: center;
        font-weight: 500;
      }

      .success-message {
        background: rgba(76, 175, 80, 0.15);
        border: 1px solid rgba(76, 175, 80, 0.4);
        color: #4caf50;
      }

      .error-message {
        background: rgba(244, 67, 54, 0.15);
        border: 1px solid rgba(244, 67, 54, 0.4);
        color: #f44336;
      }

      /* RESPONSIVE */
      @media (max-width: 768px) {
        .page-wrapper {
          margin-left: 0;
          margin-bottom: 64px;
        }

        .submit-header h1 {
          font-size: 2rem;
        }

        .ratings-form {
          padding: 24px 16px;
        }

        .ratings-grid {
          grid-template-columns: 1fr;
        }

        .form-actions {
          flex-direction: column;
        }
      }
    </style>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("ratingsForm") as HTMLFormElement;
        const successMsg = document.getElementById("successMessage") as HTMLDivElement;
        const errorMsg = document.getElementById("errorMessage") as HTMLDivElement;

        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          // Hide previous messages
          successMsg.style.display = "none";
          errorMsg.style.display = "none";

          // Collect form data
          const formData = new FormData(form);
          const data = {
            timestamp: new Date().toISOString(),
            submitterName: formData.get("submitterName") || "Anonymous",
            heroId: formData.get("heroId"),
            ratings: {
              overall: formData.get("overall") || null,
              grimSurge: formData.get("grimSurge") || null,
              delusionsDen: formData.get("delusionsDen") || null,
              torrentRift: formData.get("torrentRift") || null,
              pvp: formData.get("pvp") || null,
            },
            comments: formData.get("comments") || "",
          };

          // Validate hero selection
          if (!data.heroId) {
            errorMsg.textContent = "Please select a hero.";
            errorMsg.style.display = "block";
            return;
          }

          try {
            // Download as JSON (client-side only - no backend needed)
            const blob = new Blob([JSON.stringify(data, null, 2)], { 
              type: "application/json" 
            });
            const url = URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = url;
            a.download = `rating_${data.heroId}_${Date.now()}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);

            // Show success
            successMsg.style.display = "block";
            form.reset();

            // Scroll to message
            successMsg.scrollIntoView({ behavior: "smooth", block: "center" });
          } catch (err) {
            console.error(err);
            errorMsg.textContent = "Failed to save rating. Please try again.";
            errorMsg.style.display = "block";
          }
        });
      });
    </script>
  </body>
</html>