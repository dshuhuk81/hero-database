---
import HeroHeader from "../../components/hero/HeroHeader.astro";
import HeroSummary from "../../components/hero/HeroSummary.astro";
import HeroTraits from "../../components/hero/HeroTraits.astro";
import HeroPlaystyle from "../../components/hero/HeroPlaystyle.astro";
import { heroes, getHeroById } from "../../data/heroes";


export function getStaticPaths() {
  return heroes.map(hero => ({
    params: { id: hero.id }
  }));
}

const { id } = Astro.params;
const hero = getHeroById(id);

if (!hero) {
  throw new Error(`Hero with id "${id}" not found`);
}

---
<HeroHeader hero={hero} />
<HeroSummary hero={hero} />
<HeroTraits hero={hero} />
<HeroPlaystyle hero={hero} />
