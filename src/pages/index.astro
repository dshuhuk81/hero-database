---
import Footer from "../components/Footer.astro";
import Sidebar from "../components/Sidebar.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Motto Immortal</title>
</head>
<body>
  <Sidebar />

  <!-- HERO SECTION -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <h1 class="hero-headline">Motto Immortal</h1>
  </section>

  <!-- MAIN CONTENT -->
  <main class="main-content">
    <h2 class="section-headline">Explore the Database</h2>
    <div class="separator"></div>

    <!-- TEASER GRID -->
    <div class="teaser-grid">
      <a href="/early-game" class="teaser">
        <img src="/teaser/hero.webp" alt="Heros" class="teaser-image">
        <h3 class="teaser-headline">Hero Overview</h3>
      </a>

       <a href="/early-game" class="teaser">
        <img src="/teaser/early.webp" alt="Early Game Strategies" class="teaser-image">
        <h3 class="teaser-headline">Early Game Strategies</h3>
      </a>

      <a href="/shrine" class="teaser">
        <img src="/teaser/shrine.webp" alt="Shrine Guide" class="teaser-image">
        <h3 class="teaser-headline">Shrine Guide</h3>
      </a>

      <a href="/rankings" class="teaser">
        <img src="/teaser/rankings.webp" alt="Rankings" class="teaser-image">
        <h3 class="teaser-headline">Rankings</h3>
      </a>

      <a href="/tierlist" class="teaser">
        <img src="/teaser/tierlist.webp" alt="Tierlist" class="teaser-image">
        <h3 class="teaser-headline">Tierlist</h3>
      </a>

      <a href="/bosses" class="teaser">
        <img src="/teaser/bosses.webp" alt="Boss Guides" class="teaser-image">
        <h3 class="teaser-headline">Boss Guides</h3>
      </a>

       <a href="/totems" class="teaser">
        <img src="/teaser/totems.webp" alt="Totem List" class="teaser-image">
        <h3 class="teaser-headline">Totem List</h3>
      </a>
    </div>
  </main>

  <Footer />
</body>
</html>

<style>
/* RESET & BASE */
html, body {
  margin: 0;
  padding: 0;
  font-family: "Spectral", "Roboto", system-ui, sans-serif;
  background:
    radial-gradient(ellipse at 30% -10%, rgba(120,90,200,0.15), transparent 60%),
    radial-gradient(ellipse at 80% 20%, rgba(255,215,100,0.08), transparent 55%),
    linear-gradient(to bottom, #0d0b10, #07060c);
  color: #e6e6eb;
  min-height: 100vh;
}

/* PAGE LAYOUT WITH SIDEBAR */
body {
  margin-left: 80px;
}

@media (max-width: 768px) {
  body {
    margin-left: 0;
    margin-bottom: 60px;
  }
}

/* HERO SECTION */
.hero {
  position: relative;
  width: 100%;
  height: 480px;
  background-image: url("/bg.jpg");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.hero-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60%;
  background: linear-gradient(
    to top,
    rgba(7, 6, 12, 0.95) 0%,
    rgba(7, 6, 12, 0.7) 40%,
    transparent 100%
  );
  pointer-events: none;
}

.hero-headline {
  position: relative;
  z-index: 1;
  padding: 0 32px 48px;
  margin: 0;
  font-size: 3.5rem;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 4px 12px rgba(0, 0, 0, 0.6);
}

@media (max-width: 768px) {
  .hero-headline {
    font-size: 2.5rem;
    padding: 0 24px 32px;
  }
}

@media (max-width: 480px) {
  .hero-headline {
    font-size: 2rem;
    padding: 0 16px 24px;
  }
}

/* MAIN CONTENT */
.main-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 64px 32px;
}

.section-headline {
  font-size: 2.5rem;
  font-weight: 600;
  text-align: center;
  margin: 0 0 24px;
  color: #e6e6eb;
}

.separator {
  width: 100%;
  height: 2px;
  background: rgba(250, 204, 21, 0.4);
  margin-bottom: 64px;
}

/* TEASER GRID */
.teaser-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  max-width: 1000px;
  margin: 0 auto;
  gap: 32px;
}

@media (min-width: 900px) {
  .teaser-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.teaser {
  display: flex;
  align-items: center;
  gap: 20px;
  padding: 20px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(168, 85, 247, 0.3);
  border-radius: 12px;
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.teaser::before {
  content: "";
  position: absolute;
  inset: -2px;
  background: rgba(250, 204, 21, 0.2);
  border-radius: 12px;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.teaser:hover {
  transform: translateY(-4px);
  border-color: rgba(250, 204, 21, 0.6);
  box-shadow: 0 8px 24px rgba(168, 85, 247, 0.3);
}

.teaser:hover::before {
  opacity: 0.2;
}

.teaser-image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  object-fit: cover;
  border: 2px solid rgba(255, 255, 255, 0.2);
  transition: transform 0.3s ease;
}

.teaser:hover .teaser-image {
  transform: scale(1.1);
}

.teaser-headline {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 600;
  color: #e6e6eb;
}

@media (max-width: 480px) {
  .teaser {
    gap: 16px;
    padding: 16px;
  }

  .teaser-image {
    width: 60px;
    height: 60px;
  }

  .teaser-headline {
    font-size: 1.25rem;
  }
}
</style>
