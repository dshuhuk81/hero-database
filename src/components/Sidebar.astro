---
// src/components/Sidebar.astro
interface NavItem {
  icon: string;
  label: string;
  href: string;
}

const navItems: NavItem[] = [
  {
    icon: "/icons/sidebar/home.webp",
    label: "Heroes",
    href: "/"
  },
  {
    icon: "/icons/sidebar/tierlist.webp",
    label: "Tier List",
    href: "/tierlist"
  },
  {
    icon: "/icons/sidebar/changelog.svg",
    label: "Changelog",
    href: "/changelog"
  }
];

// Aktuelle Seite ermitteln (f√ºr active State)
const currentPath = Astro.url.pathname;
---

<aside class="sidebar">
  <nav class="sidebar-nav">
    {navItems.map(item => (
      <a 
        href={item.href} 
        class={`nav-item ${currentPath === item.href ? 'active' : ''}`}
        title={item.label}
      >
        <div class="nav-icon">
          <img src={item.icon} alt={item.label} />
        </div>
        <span class="nav-label">{item.label}</span>
      </a>
    ))}
  </nav>
</aside>

<style>
  /* ===============================
     SIDEBAR - MODERN & MINIMAL
     =============================== */
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 80px;
    background: rgba(7, 6, 12, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-right: 1px solid rgba(255, 255, 255, 0.06);
    z-index: 100;
    display: flex;
    flex-direction: column;
    padding-top: 32px;
  }

  /* NAVIGATION */
  .sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 0 10px;
  }

  /* NAV ITEM - CLEAN & SIMPLE */
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    padding: 14px 8px;
    border-radius: 10px;
    text-decoration: none;
    color: rgba(230, 230, 235, 0.5);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  /* HOVER - SUBTLE */
  .nav-item:hover {
    color: rgba(230, 230, 235, 0.9);
    background: rgba(255, 255, 255, 0.04);
  }

  /* ACTIVE STATE - ACCENT BAR */
  .nav-item.active {
    color: #facc15;
    background: transparent;
  }

  .nav-item.active::before {
    content: "";
    position: absolute;
    left: -10px;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 24px;
    background: linear-gradient(180deg, #facc15, #f59e0b);
    border-radius: 0 3px 3px 0;
    box-shadow: 0 0 12px rgba(250, 204, 21, 0.5);
  }

  /* ICON - NO BOX */
  .nav-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-item:hover .nav-icon {
    transform: translateY(-2px);
  }

  .nav-item.active .nav-icon {
    transform: scale(1.1);
  }

  .nav-icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
    filter: brightness(0.7) saturate(0);
    transition: filter 0.25s ease;
  }

  .nav-item:hover .nav-icon img {
    filter: brightness(1) saturate(0);
  }

  .nav-item.active .nav-icon img {
    filter: brightness(1.3) saturate(1) drop-shadow(0 0 8px rgba(250, 204, 21, 0.4));
  }

  /* LABEL */
  .nav-label {
    font-size: 0.7rem;
    font-weight: 500;
    text-align: center;
    line-height: 1.2;
    letter-spacing: 0.3px;
  }

  /* ===============================
     RESPONSIVE
     =============================== */
  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: 60px;
      top: auto;
      bottom: 0;
      padding: 0;
      border-right: none;
      border-top: 1px solid rgba(255, 255, 255, 0.06);
      padding-top: 0;
    }

    .sidebar-nav {
      flex-direction: row;
      justify-content: space-around;
      align-items: center;
      padding: 0 20px;
      height: 100%;
      gap: 0;
    }

    .nav-item {
      padding: 8px 20px;
      gap: 4px;
    }

    .nav-icon {
      width: 28px;
      height: 28px;
    }

    .nav-icon img {
      width: 22px;
      height: 22px;
    }

    .nav-label {
      font-size: 0.65rem;
    }

    .nav-item.active::before {
      left: 50%;
      top: -1px;
      bottom: auto;
      transform: translateX(-50%);
      width: 32px;
      height: 3px;
    }
  }
</style>