// TeamComps.astro - Fixed to use existing heroes data
import { getHeroById } from "../data/heroes";

interface FormationHero {
  heroId: string;
  position: string;
}

interface TeamComp {
  title: string;
  description: string;
  formation: FormationHero[];
}

interface Props {
  currentHeroId: string;
  pveTeam: TeamComp;
  pvpTeam: TeamComp;
}

const { currentHeroId, pveTeam, pvpTeam } = Astro.props;

// Prepare formation data using existing getHeroById
function renderHeroCard(heroId: string, position: string) {
  const hero = getHeroById(heroId);
  
  if (!hero) {
    console.warn(`Hero ${heroId} not found`);
    return null;
  }
  
  const isCurrentHero = hero.id === currentHeroId;
  
  return {
    hero,
    isCurrentHero,
    position
  };
}

// Prepare PVE formation
const pveBackRow = ['back-left', 'back-right'].map(pos => {
  const formationHero = pveTeam.formation.find(h => h.position === pos);
  return formationHero ? renderHeroCard(formationHero.heroId, pos) : null;
});

const pveFrontRow = ['front-left', 'front-center', 'front-right'].map(pos => {
  const formationHero = pveTeam.formation.find(h => h.position === pos);
  return formationHero ? renderHeroCard(formationHero.heroId, pos) : null;
});

// Prepare PVP formation
const pvpBackRow = ['back-left', 'back-right'].map(pos => {
  const formationHero = pvpTeam.formation.find(h => h.position === pos);
  return formationHero ? renderHeroCard(formationHero.heroId, pos) : null;
});

const pvpFrontRow = ['front-left', 'front-center', 'front-right'].map(pos => {
  const formationHero = pvpTeam.formation.find(h => h.position === pos);
  return formationHero ? renderHeroCard(formationHero.heroId, pos) : null;
});
