// TeamComps.astro - Fixed to use existing heroes data
import { getHeroById } from "../data/heroes";

interface FormationHero {
  heroId: string;
  position: string;
}

interface FormationNote {
  heroId: string;
  position: string;
  note: string;
}

interface TeamComp {
  title: string;
  description: string;
  formation: FormationHero[];
  formationSummary?: string;
  formationNotes?: FormationNote[];
}

interface Props {
  currentHeroId: string;
  pveTeam: TeamComp;
  pvpTeam: TeamComp;
}

interface TeamComp {
  title: string;
  description: string;
  formation: FormationHero[];
  formationSummary?: string;
  formationNotes?: FormationNote[];
  winCondition?: string;
  danger?: string;
}


const { currentHeroId, pveTeam, pvpTeam } = Astro.props as Props;

const pveNotesMap = new Map(
  (pveTeam.formationNotes ?? []).map((x) => [x.position, x.note])
);

const pvpNotesMap = new Map(
  (pvpTeam.formationNotes ?? []).map((x) => [x.position, x.note])
);

function renderHeroCard(heroId: string, position: string, note?: string) {
  const hero = getHeroById(heroId);

  if (!hero) {
    console.warn(`Hero ${heroId} not found`);
    return null;
  }

  const isCurrentHero = hero.id === currentHeroId;

  return {
    hero,
    isCurrentHero,
    position,
    note
  };
}


// Prepare PVE formation
const pveBackRow = ["back-left", "back-right"].map((pos) => {
  const formationHero = pveTeam.formation.find((h) => h.position === pos);
  return formationHero
    ? renderHeroCard(formationHero.heroId, pos, pveNotesMap.get(pos))
    : null;
});


const pveFrontRow = ["front-left", "front-center", "front-right"].map((pos) => {
  const formationHero = pveTeam.formation.find((h) => h.position === pos);
  return formationHero
    ? renderHeroCard(formationHero.heroId, pos, pveNotesMap.get(pos))
    : null;
});


// Prepare PVP formation
const pvpBackRow = ["back-left", "back-right"].map((pos) => {
  const formationHero = pvpTeam.formation.find((h) => h.position === pos);
  return formationHero
    ? renderHeroCard(formationHero.heroId, pos, pvpNotesMap.get(pos))
    : null;
});


const pvpFrontRow = ["front-left", "front-center", "front-right"].map((pos) => {
  const formationHero = pvpTeam.formation.find((h) => h.position === pos);
  return formationHero
    ? renderHeroCard(formationHero.heroId, pos, pvpNotesMap.get(pos))
    : null;
});

