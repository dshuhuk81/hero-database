---
const { hero } = Astro.props;
---

<a
  class="hero-card"
  href={`/heroes/${hero.id}`}
  style={`--hero-image: url(/heroes/${hero.id}.webp);`}
>
  {hero.rating && (
    <div class={`rating-badge rating-${hero.rating.toLowerCase()}`}>
      {hero.rating}
    </div>
  )}

  <div class="name-overlay">
    <span class="hero-name">{hero.name}</span>
  </div>
</a>

<style>
/* ================================
   HERO CARD – STABLE VERSION
   ================================ */

.hero-card {
  display: block;
  width: 100%;
  height: 320px;

  position: relative;
  border-radius: 12px;

  background: #222;
  color: #fff;
  text-decoration: none;

  overflow: hidden; /* ✅ NUR HIER */
}

/* Bild-Layer */
.hero-card::before {
  content: "";
  position: absolute;
  inset: 0;

  background-image: var(--hero-image);
  background-size: cover;
  background-position: center;

  transition:
    transform 0.45s cubic-bezier(.2,.8,.2,1),
    background-position 0.45s cubic-bezier(.2,.8,.2,1);

  will-change: transform;
  z-index: 0;
}

/* Hover Zoom */
.hero-card:hover::before {
  transform: scale(1.12);
  background-position: center 35%;
}

/* UI über dem Bild */
.hero-card > * {
  position: absolute;
  z-index: 2;
}

/* ================================
   NAME OVERLAY
   ================================ */

.name-overlay {
  bottom: 0;
  left: 0;
  right: 0;

  padding: 10px 8px;
  text-align: center;

  background:
    linear-gradient(
      to top,
      rgba(10,10,16,0.9),
      rgba(10,10,16,0.55),
      rgba(10,10,16,0.15)
    );

  backdrop-filter: blur(16px) saturate(1.25);
}

.hero-name {
  font-size: 0.85rem;
  font-weight: 500;
  letter-spacing: 0.3px;
}

/* ================================
   RATING BADGE (FIXED!)
   ================================ */

.rating-badge {
  top: 8px;
  right: 8px;

  display: inline-flex;
  align-items: center;
  justify-content: center;

  min-width: 28px;
  height: 22px;
  padding: 0 8px;

  font-size: 0.7rem;
  font-weight: 700;

  border-radius: 999px;
  white-space: nowrap;

  backdrop-filter: blur(6px);
  background: rgba(0,0,0,0.65);
}

/* Rating Colors */
.rating-ss { background: linear-gradient(135deg,#ffd700,#ffb700); color:#2b1b00;}
.rating-s  { background: linear-gradient(135deg,#caa9ff,#9f6bff); color:#160a2e;}
.rating-a  { background: linear-gradient(135deg,#7dd3fc,#38bdf8); color:#002030;}
.rating-b  { background: linear-gradient(135deg,#a7f3d0,#34d399); color:#00331f;}
.rating-c  { background: linear-gradient(135deg,#fde68a,#facc15); color:#3a2a00;}
.rating-d  { background: linear-gradient(135deg,#fca5a5,#ef4444); color:#3a0000;}
</style>
