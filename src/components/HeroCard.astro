---
const { hero } = Astro.props;
---

<a
  class="hero-card"
  href={`/heroes/${hero.id}`}
  style={`--hero-image: url(/heroes/${hero.id}.webp);`}
>
  {hero.rating && (
    <div class={`rating-badge rating-${hero.rating.toLowerCase()}`}>
      {hero.rating}
    </div>
  )}

  <div class="name-overlay">
    <span class="hero-name">{hero.name}</span>
  </div>
</a>

<style>
/* ================================
   HERO CARD â€“ STABLE VERSION
   ================================ */

.hero-card {
  display: block;
  width: 100%;
  height: 320px;

  position: relative;
  border-radius: 12px;

  background: #222;
  color: #fff;
  text-decoration: none;

  overflow: hidden; /* âœ… NUR HIER */
}

/* Bild-Layer */
.hero-card::before {
  content: "";
  position: absolute;
  inset: 0;

  background-image: var(--hero-image);
  background-size: cover;
  background-position: center;

  transition:
    transform 0.45s cubic-bezier(.2,.8,.2,1),
    background-position 0.45s cubic-bezier(.2,.8,.2,1);

  will-change: transform;
  z-index: 0;
}

/* Hover Zoom */
.hero-card:hover::before {
  transform: scale(1.12);
  background-position: center 35%;
}

/* UI Ã¼ber dem Bild */
.hero-card > * {
  position: absolute;
  z-index: 2;
}

/* ================================
   NAME OVERLAY
   ================================ */

.name-overlay {
  bottom: 0;
  left: 0;
  right: 0;

  padding: 10px 8px;
  text-align: center;

  background:
    linear-gradient(
      to top,
      rgba(10,10,16,0.9),
      rgba(10,10,16,0.55),
      rgba(10,10,16,0.15)
    );

  backdrop-filter: blur(16px) saturate(1.25);
}

.hero-name {
  font-size: 0.85rem;
  font-weight: 500;
  letter-spacing: 0.3px;
}

/* ================================
   RATING BADGE â€“ EXTENDED TIERS
   ================================ */

.rating-badge {
  position: absolute;
  top: 8px;
  right: 8px;

  display: inline-flex;
  align-items: center;
  justify-content: center;

  min-width: 28px;
  height: 22px;
  padding: 0 8px;

  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 0.5px;
  text-transform: uppercase;

  border-radius: 999px;
  white-space: nowrap;

  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);

  box-shadow:
    0 2px 8px rgba(0,0,0,0.45),
    inset 0 1px 0 rgba(255,255,255,0.25);

  z-index: 4;
}

/* ðŸ”´ SSS â€“ GOD TIER */
.rating-sss {
  background: linear-gradient(135deg, #ff4d4d, #b91c1c);
  color: #fff5f5;
  box-shadow:
    0 0 12px rgba(255, 60, 60, 0.6),
    inset 0 1px 0 rgba(255,255,255,0.35);
}

/* ðŸŸ¡ SS â€“ TOP TIER */
.rating-ss {
  background: linear-gradient(135deg, #ffe066, #facc15);
  color: #3a2a00;
}

/* ðŸŸ¡ S â€“ HIGH TIER */
.rating-s {
  background: linear-gradient(135deg, #fde68a, #fbbf24);
  color: #3a2a00;
}

/* ðŸŸ  A â€“ STRONG */
.rating-a {
  background: linear-gradient(135deg, #fdba74, #fb923c);
  color: #3b1d00;
}

/* ðŸŸ£ B â€“ SOLID */
.rating-b {
  background: linear-gradient(135deg, #c4b5fd, #8b5cf6);
  color: #1e103a;
}

/* ðŸ”µ C â€“ NICHE */
.rating-c {
  background: linear-gradient(135deg, #93c5fd, #3b82f6);
  color: #001a33;
}

/* ðŸŸ¦ D â€“ WEAK */
.rating-d {
  background: linear-gradient(135deg, #5eead4, #14b8a6);
  color: #002c26;
}

</style>
