---
const { hero } = Astro.props;
---

<section class="hero-detail-header">
  <div class="hero-detail-bg"></div>

  <div class="hero-detail-content">

    <!-- LEFT -->
    <div class="hero-meta">
      <a href="/" class="back-link">‚Üê Back</a>

      <h1 class="hero-name">{hero.name}</h1>

      <div class="hero-tags">
        <span class="tag">{hero.faction}</span>
        <span class="tag">{hero.role}</span>
        <span class="tag">{hero.class}</span>
        <span class={`tag rarity-${hero.rarity.toLowerCase()}`}>
          {hero.rarity}
        </span>
      </div>

      <p class="hero-description">
        {hero.description}
      </p>

      {hero.ratings?.overall && (
        <div class="hero-rating">
          <span class={`rating rating-${hero.ratings.overall.toLowerCase()}`}>
            {hero.ratings.overall}
          </span>
          <span class="rating-label">Overall Rating</span>
        </div>
      )}
    </div>

    <!-- RIGHT -->
    <div class="hero-art">
      <img src={hero.image} alt={hero.name} />
    </div>

  </div>
</section>

<style>
/* ================================
   HERO DETAIL HEADER
   ================================ */

.hero-detail-header {
  position: relative;
  padding: 80px 0 64px;
  overflow: hidden;
}

/* Hintergrund wie Hauptseite */
.hero-detail-bg {
  position: absolute;
  inset: 0;
  z-index: 0;

  background:
    radial-gradient(
      ellipse at 70% 20%,
      rgba(120, 90, 200, 0.18),
      transparent 60%
    ),
    radial-gradient(
      ellipse at 20% 30%,
      rgba(255, 215, 100, 0.08),
      transparent 55%
    ),
    linear-gradient(
      to bottom,
      #0d0b10 0%,
      #0a0910 40%,
      #07060c 100%
    );
}

/* CONTENT */
.hero-detail-content {
  position: relative;
  z-index: 2;

  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;

  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 48px;
  align-items: center;
}

/* LEFT SIDE */
.hero-meta {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.back-link {
  font-size: 0.85rem;
  opacity: 0.7;
  text-decoration: none;
  color: inherit;
}
.back-link:hover {
  opacity: 1;
}

.hero-name {
  font-size: 3rem;
  font-weight: 600;
  letter-spacing: 0.5px;
  margin: 0;
}

.hero-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.tag {
  padding: 6px 10px;
  font-size: 0.7rem;
  letter-spacing: 0.4px;
  border-radius: 999px;
  background: rgba(255,255,255,0.08);
  border: 1px solid rgba(255,255,255,0.18);
}

.tag.rarity-legendary {
  border-color: #facc15;
  color: #facc15;
}
.tag.rarity-epic {
  border-color: #a855f7;
  color: #a855f7;
}
.tag.rarity-common {
  border-color: #4ade80;
  color: #4ade80;
}

.hero-description {
  max-width: 520px;
  font-size: 0.95rem;
  line-height: 1.6;
  opacity: 0.9;
}

/* RATING */
.hero-rating {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-top: 8px;
}

.rating {
  min-width: 48px;
  height: 36px;
  display: inline-flex;
  align-items: center;
  justify-content: center;

  font-weight: 700;
  border-radius: 10px;
  font-size: 1rem;
}

.rating-sss { background: #dc2626; color: #fff; }
.rating-ss  { background: #facc15; color: #2b1b00; }
.rating-s   { background: #facc15; color: #2b1b00; }
.rating-a   { background: #fb923c; color: #3a1f00; }
.rating-b   { background: #a855f7; color: #1f103a; }
.rating-c   { background: #38bdf8; color: #002030; }
.rating-d   { background: #2dd4bf; color: #003333; }

.rating-label {
  font-size: 0.8rem;
  opacity: 0.7;
}

/* RIGHT SIDE IMAGE */
.hero-art {
  position: relative;
  display: flex;
  justify-content: center;
}

.hero-art::before {
  content: "";
  position: absolute;
  inset: -20%;
  background: radial-gradient(
    circle,
    rgba(255, 215, 100, 0.25),
    transparent 65%
  );
  filter: blur(40px);
}

.hero-art img {
  max-height: 520px;
  width: auto;
  object-fit: contain;
  z-index: 2;
}

/* RESPONSIVE */
@media (max-width: 900px) {
  .hero-detail-content {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .hero-tags {
    justify-content: center;
  }

  .hero-art img {
    max-height: 420px;
  }
}
</style>
