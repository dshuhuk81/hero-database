---
const { hero } = Astro.props;

const bestWhen = hero?.playstyle?.bestWhen ?? [];
const avoidWhen = hero?.playstyle?.avoidWhen ?? [];
---

<section class="hero-playstyle">
  <h2>So spielst du diesen Helden</h2>

  <div class="columns">
    <div>
      <h4>Ideal, wenn:</h4>
      {bestWhen.length > 0 ? (
        <ul>
          {bestWhen.map(i => <li>{i}</li>)}
        </ul>
      ) : (
        <p>Keine Angaben</p>
      )}
    </div>

    <div>
      <h4>Vermeiden, wenn:</h4>
      {avoidWhen.length > 0 ? (
        <ul>
          {avoidWhen.map(a => <li>{a}</li>)}
        </ul>
      ) : (
        <p>Keine Angaben</p>
      )}
    </div>
  </div>
</section>

<style>
.columns {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32px;
}
</style>
