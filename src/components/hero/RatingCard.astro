// src/components/hero/RatingCard.astro
interface Props {
  ratings: {
    overall?: string;
    grimSurge?: string;
    delusionsDen?: string;
    torrentRift?: string;
    pvp?: string;
    pve?: string;
  };
}

const { ratings } = Astro.props;

const ratingCategories = [
  { key: 'overall', label: 'Overall', icon: '‚≠ê' },
  { key: 'pve', label: 'PvE', icon: '‚ö°' },
  { key: 'pvp', label: 'PvP', icon: '‚ö°'},
  { key: 'grimSurge', label: 'Grim Surge', icon: '‚öîÔ∏è' },
  { key: 'delusionsDen', label: 'Delusions Den', icon: 'üèõÔ∏è' },
  { key: 'torrentRift', label: 'Torrent Rift', icon: 'üåä' },

];
---
          <!--<div class="rating-icon">{category.icon}</div>-->

<div class="ratings-section">
  <h2>Ratings</h2>
  
  <div class="ratings-grid">
    {ratingCategories.map(category => {
      const value = ratings[category.key] || 'N/A';
      return (
        <div class="rating-card">
          <div class="rating-content">
            <span class="rating-label">{category.label}</span>
            <span class={`rating-value rating-${value.toLowerCase()}`}>
              {value}
            </span>
          </div>
        </div>
      );
    })}
  </div>
</div>

<style>
  /* ===============================
     RATINGS SECTION
     =============================== */
  .ratings-section {
    margin-top: 64px;
  }

  .ratings-section h2 {
    margin-bottom: 24px;
    font-size: 1.75rem;
    font-weight: 600;
  }

  /* RATINGS GRID */
  .ratings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 16px;
  }

  /* RATING CARD */
  .rating-card {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px;
    background: rgba(0, 0, 0, 0.25);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .rating-card:hover {
    background: rgba(255, 255, 255, 0.03);
    border-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  /* ICON */
  .rating-icon {
    font-size: 2rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    flex-shrink: 0;
  }

  /* CONTENT */
  .rating-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
    flex: 1;
  }

  .rating-label {
    font-size: 0.875rem;
    color: rgba(230, 230, 235, 0.7);
    font-weight: 500;
    padding-bottom: 8px;
  }

  /* RATING VALUE */
  .rating-value {
    display: inline-block;
    padding: 6px 14px;
    border-radius: 6px;
    font-weight: 700;
    font-size: 1.125rem;
    text-align: center;
    width: fit-content;
  }

  /* RATING COLORS */
  .rating-value.rating-sss {
    background: linear-gradient(135deg, #ff6b6b, #ff8787);
    color: #fff;
    box-shadow: 0 0 12px rgba(255, 107, 107, 0.4);
  }

  .rating-value.rating-ss {
    background: linear-gradient(135deg, #ffd93d, #ffe66d);
    color: #1a1a1a;
    box-shadow: 0 0 12px rgba(255, 217, 61, 0.4);
  }

  .rating-value.rating-s {
    background: linear-gradient(135deg, #a8e6cf, #c4f0d9);
    color: #1a1a1a;
    box-shadow: 0 0 12px rgba(168, 230, 207, 0.4);
  }

  .rating-value.rating-a {
    background: linear-gradient(135deg, #74b9ff, #a29bfe);
    color: #fff;
  }

  .rating-value.rating-b {
    background: linear-gradient(135deg, #dfe6e9, #b2bec3);
    color: #2d3436;
  }

  .rating-value.rating-c {
    background: linear-gradient(135deg, #636e72, #7f8c8d);
    color: #fff;
  }

  .rating-value.rating-n\/a {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(230, 230, 235, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* ===============================
     RESPONSIVE
     =============================== */
  @media (max-width: 768px) {
    .ratings-grid {
      grid-template-columns: 1fr;
    }

    .rating-card {
      padding: 16px;
    }

    .rating-icon {
      width: 40px;
      height: 40px;
      font-size: 1.5rem;
    }

    .rating-value {
      font-size: 1rem;
      padding: 4px 12px;
    }
  }
</style>